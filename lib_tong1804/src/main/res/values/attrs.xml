<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundProgressBar">
        <attr name="roundWith" format="dimension"></attr>
        <attr name="roundColor" format="color"></attr>
        <attr name="textColor" format="color"></attr>
        <attr name="textSize" format="dimension"></attr>
        <attr name="max" format="integer"></attr>
        <attr name="roundProgressColor" format="color"></attr>
        <attr name="textIsDisplay" format="boolean"></attr>
        <attr name="style">
            <enum name="STORKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />//滑动indicator的颜色
        <attr name="pstsIndicatorHeight" format="dimension" />//滑动indicator的高度
        <attr name="pstsUnderlineColor" format="color" />//底部分割线的颜色
        <attr name="pstsUnderlineHeight" format="dimension" />//底部分割线的高度
        <attr name="pstsDividerColor" format="color" />//两个tab之间分割线的颜色
        <attr name="pstsDividerPadding" format="dimension" />//两个tab之间分割线的上下padding
        <attr name="pstsTabPaddingLeftRight" format="dimension" />// 每个tab的左右padding
        <attr name="pstsScrollOffset" format="dimension" />//选中tab的滚动偏移量
        <attr name="pstsTabBackground" format="reference" />//每个Tab的背景图
        <attr name="pstsShouldExpand" format="boolean" />//设为true时，每个tab的weight相同，默认false
        <attr name="pstsTextAllCaps" format="boolean" />// 设为true时，所有tab标题为大写，默认true
        <attr name="pstsTabSelectedColor" format="color"/>
        <attr name="pstsTabSelectedSize" format="dimension"/>
        <attr name="pstsTabTextSize" format="dimension"/>
        <attr name="pstsTabTextColor" format="color"/>
    </declare-styleable>

</resources>